
@{
    ViewBag.Title = "Login";
}

<h2>登入系統</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>輸入帳號與密碼</h4>
        <hr />
        <div class="form-group">
            <div>帳號(註冊時輸入的Email)</div>
            <div class="col-md-10">
                @Html.TextBox("txtAccount", "Marco@gmail.com", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div>密碼</div>
            <div class="col-md-10">
                @Html.TextBox("txtPassword", "", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group d-inline">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="登入" class="btn btn-dark" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("忘記密碼", "List", "Product", null, new { @class = "btn btn-outline-dark" })
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

