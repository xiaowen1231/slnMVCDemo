@model prjMVCDemo.tProduct

@{
    ViewBag.Title = "AddToCart";
}

<h2>加入選課單</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <div class="form-group">
        <h4>輸入數量</h4><input type="hidden" name="txtfId" value="@ViewBag.fId" />
        @Html.TextBox("txtCount", "1", new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="hidden" name="txtfId" value="@ViewBag.fId" />
            <input type="submit" value="購買" class="btn btn-default" />
        </div>
    </div>

</div>
}

<div>
    @Html.ActionLink("取消", "List")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
